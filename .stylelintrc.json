{
  "plugin": ["stylelint-scss"],
  "extends": ["stylelint-config-recommended-scss"],
  "rules": {
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "at-root",
          "function",
          "if",
          "for",
          "each",
          "include",
          "mixin",
          "content",
          "return",
          "debug"
        ]
      }
    ]
  }
}
